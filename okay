#include "main.h"
#include <stdio.h>
#include <sys/wait.h>
#include <unistd.h>
#include <stdlib.h>

int main ()
{
	size_t pid;
	/* int  i; */
	int waiter;
	char *content;
	/* char *tok; */
	char *shell_name = "PARALLAX-SHELL$";

	size_t x = 0;
	/* char *const argv[] = {"/bin/ls", "ls", "-l", NULL}; */
	printf("%s\n", shell_name);


	/*for  (i = 0; i <= argc; i++)
	{
		*content = &argv[i];
	} */

	 /* tok = strtok(content, "\0"); */
	 /* pid = fork(); */

	 
	 pid = fork();

	if (pid == 0)
	 {
		 char *const argv[] = {NULL};
		/* char *path = {"/usr/bin/ls"}; */
		 getline(&content, &x, stdin);
		 printf("%s", content);

		 if (execve(content, argv, NULL) == -1)
		 {
			 perror("Something went wrong");
		 }

		 else
		 {
			 exit(EXIT_FAILURE);

		 }
	 }

		 else
		 {
			 wait(&waiter);
			 printf("done");
			 printf("\n");
		 }

	 printf("%s", content);

	/*  printf("%d", argc); */

	 return (0);
}
